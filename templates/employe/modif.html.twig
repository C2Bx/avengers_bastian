{% extends 'base.html.twig' %}

{% block title %}Modifier un employé{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Modifier un employé</h1>
        <div class="row mt-4">
            <div class="col-md-6">
                {{ form_start(form) }}
                
                <div class="form-group">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.nom) %}
                        <div class="alert alert-danger" role="alert">
                            {{ form_errors(form.nom) }}
                        </div>
                    {% endif %}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.prenom) %}
                        <div class="alert alert-danger" role="alert">
                            {{ form_errors(form.prenom) }}
                        </div>
                    {% endif %}
                </div>
                
                
                
                {{ form_end(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-secondary">Modifier</button>
                    <a href="{{ path('employes_index') }}" class="btn btn-dark">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
