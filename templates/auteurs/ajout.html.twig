{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouvel auteur{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Ajouter un nouvel auteur</h1>
        <div class="row mt-4">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.nom, {'label': 'Nom', 'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.nom) %}
                        <div class="alert alert-danger" role="alert">{{ form_errors(form.nom) }}</div>
                    {% endif %}
                </div>
                <div class="mb-3">
                    {{ form_row(form.prenom, {'label': 'Prénom', 'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form.prenom) %}
                        <div class="alert alert-danger" role="alert">{{ form_errors(form.prenom) }}</div>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-secondary">Ajouter</button>
                <a href="{{ path('app_auteur') }}" class="btn btn-dark">Retour à la liste</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
