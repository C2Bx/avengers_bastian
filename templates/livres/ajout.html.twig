{% extends 'base.html.twig' %}

{% set pageTitle = mode == 'ajouter' ? 'Ajouter un livre' : 'Modifier un livre' %}
{% set actionButton = mode == 'ajouter' ? 'Ajouter' : 'Modifier' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">{{ pageTitle }}</h1>

        <div class="row mt-4">
            <div class="col-md-6">
                {{ form_start(form) }}

                {# Title field #}
                <div class="mb-3">
                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.titre) }}
                </div>

                {# Year of publication field #}
                <div class="mb-3">
                    {{ form_label(form.anneeParution, 'Année de parution', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.anneeParution, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.anneeParution) }}
                </div>

                {# Number of pages field #}
                <div class="mb-3">
                    {{ form_label(form.nombrePages, 'Nombre de pages', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nombrePages, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nombrePages) }}
                </div>

                {# Author selection field with a placeholder #}
                <div class="mb-3">
                    {{ form_label(form.auteur, 'Auteur', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.auteur, {'attr': {'class': 'form-control', 'placeholder': 'Choisir un auteur'}}) }}
                    {{ form_errors(form.auteur) }}
                </div>

                {# Submission and back buttons #}
                <button type="submit" class="btn btn-secondary">{{ actionButton }}</button>
                <a href="{{ path('livres_index') }}" class="btn btn-dark">Retour à la liste</a>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
