{# templates/livres/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block head %}
    {# Assurez-vous que Bootstrap est inclus dans base.html.twig #}
    {# Vous pouvez également inclure des styles personnalisés ici si nécessaire #}
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Liste des Livres</h1>
    {% if livres is not empty %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Année de Parution</th>
                        <th>Genre</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for livre in livres %}
                        <tr>
                            <td>{{ livre.id }}</td>
                            <td>{{ livre.titre }}</td>
                            <td>{{ livre.auteur }}</td>
                            <td>{{ livre.anneeParution|date('Y') }}</td>
                            <td>{{ livre.genre }}</td>
                            <td>
                                <a href="{{ path('livre_detail', {'id': livre.id}) }}" class="btn btn-sm btn-info">Détails</a>
                                {# Ajoutez d'autres actions ici si nécessaire, comme Modifier ou Supprimer #}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-warning" role="alert">
            Aucun livre trouvé.
        </div>
    {% endif %}
</div>
{% endblock %}
