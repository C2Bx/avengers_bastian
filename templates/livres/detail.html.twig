{% extends 'base.html.twig' %}

{% block title %}Détails du Livre{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails du Livre</h1>

    <section>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ livre.titre|default('Titre inconnu') }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    {{ livre.auteur.nom|default('Auteur inconnu') }} {{ livre.auteur.prenom|default('Prénom inconnu') }}
                </h6>
                <p class="card-text">Description du livre</p>

                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ livre.id|default('ID inconnu') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Titre</th>
                            <td>{{ livre.titre|default('Titre inconnu') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Auteur</th>
                            <td>{{ livre.auteur.nom|default('Auteur inconnu') }} {{ livre.auteur.prenom|default('Prénom inconnu') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Année de Parution</th>
                            <td>{{ livre.anneeParution ? livre.anneeParution|date('Y') : 'Année de parution inconnue' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">ISBN</th>
                            <td>{{ livre.isbn|default('ISBN inconnu') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Genre</th>
                            <td>{{ livre.genre|default('Genre inconnu') }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nombre de Pages</th>
                            <td>{{ livre.nombrePages|default('Nombre de pages inconnu') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <a href="{{ path('livre_liste') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('livre_modif', {'id': livre.id}) }}" class="btn btn-secondary">Modifier</a>
</div>
{% endblock %}
